{{#form-field propertyName
    class="text-field"
    object=object
    form=form
    label=label
    control=control
    update=(action update) as |f|}}
  {{f.label required=required}}
  <div class="col-md-6 col-sm-6 col-xs-12">
  {{f.control
      accesskey=accesskey
      autocomplete=autocomplete
      autofocus=autofocus
      autosave=autosave
      dir=dir
      disabled=disabled
      hidden=hidden
      inputmode=inputmode
      lang=lang
      list=list
      max=max
      maxlength=maxlength
      min=min
      minlength=minlength
      multiple=multiple
      pattern=pattern
      placeholder=placeholder
      readonly=readonly
      required=required
      size=size
      spellcheck=spellcheck
      step=step
      tabindex=tabindex
      title=title
  }}
      {{f.errors}}
      {{f.hint}}
  </div>
{{/form-field}}
